<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Login"
    android:background="@color/notes_app">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="78dp"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/login_notes_image"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SignUp"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/image_login"
            android:layout_width="371dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/login1" />

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="114dp"
            android:paddingRight="0dp"
            android:paddingBottom="4dp"
            android:src="@drawable/email_icon"
            />

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="194dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/email_icon"
            android:layout_marginLeft="0dp"
            android:layout_toEndOf="@+id/email_icon"
            android:hint="        email"
            android:paddingLeft="0dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/password_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/email_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="101dp"
            android:layout_marginTop="50dp"
            android:paddingRight="0dp"
            android:paddingBottom="4dp"
            android:src="@drawable/password_icon"
            />
        <EditText
            android:id="@+id/ed_password"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/password_icon"
            android:layout_marginLeft="0dp"
            android:layout_toEndOf="@+id/password_icon"
            android:hint="        password"
            android:padding="0dp"
            android:textColor="#000000"
            android:textSize="18sp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_login"
        android:paddingLeft="35dp"
        android:paddingTop="2dp"
        android:paddingRight="35dp"
        android:paddingBottom="8dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>